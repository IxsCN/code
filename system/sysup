#!/usr/bin/env bash

. lib.bash || exit

unset method

if have pacman; then
	method="pacman"
elif have apt-get; then
	method="apt-get"
fi

set -e

case $method in
    "pacman")
	sudo: pacman -Syu "$@"
	;;
    "apt-get")
	sudo: apt-get update
	sudo: apt-get dist-upgrade -V "$@"
	;;
    *)
	die "no known package manager found"
	;;
esac
