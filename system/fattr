#!/usr/bin/env perl
use warnings;
use strict;
use Nullroute::Lib qw(_debug _die);

sub _system {
	my (@args) = @_;
	_debug("running: @args");
	system {$args[0]} @args;
}

# https://freedesktop.org/wiki/CommonExtendedAttributes/

my %trans = (
	comment  => "user.xdg.comment",
	lang     => "user.xdg.language",
	origin   => "user.xdg.origin.url",
	mime     => "user.mime_type",
	mimetype => "user.mime_type",
	referer  => "user.xdg.referrer.url",
);

my %attrs;
my @files;

my $attr_re = qr|[^/=]+|;

for (@ARGV) {
	if (/^($attr_re)=(.*)$/) {
		my ($key, $value) = ($1, $2);
		if (defined $trans{$key}) {
			$key = $trans{$key};
		} elsif ($key =~ /^\./) {
			$key =~ s///;
		} elsif ($key !~ /^(user|system|security|trusted)\./) {
			$key = "user.".$key;
		}
		$attrs{$key} = $value;
	}
	else {
		push @files, $_;
	}
}

if (!@files) {
	_die("no files specified");
}

my $exit = 0;

if (%attrs) {
	for my $key (keys %attrs) {
		my $val = $attrs{$key};
		my $ret;
		if (length $val) {
			_debug("setting '$key' to '$val'");
			$ret = _system("setfattr", "-n", $key,
					"-v", $val, "--", @files);
		} else {
			_debug("removing '$key'");
			$ret = _system("setfattr", "-x", $key, "--", @files);
		}
		$exit |= $ret > 0;
	}
} else {
	my $ret = _system("getfattr", "--absolute-names", "-m", "-", "-d", @files);
	$exit |= $ret > 0;
}

exit $exit;
